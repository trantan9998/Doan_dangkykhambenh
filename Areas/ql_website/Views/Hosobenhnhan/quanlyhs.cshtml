@model IEnumerable<doan_qldkonline.Models.Hosobenhnhan>

@{
    ViewBag.Title = "quanlyhs";
    Layout = "~/Areas/ql_website/Views/Shared/Layout_admin01.cshtml";
}

<h2>HỒ SƠ BỆNH NHÂN KHI ĐẾN KHÁM</h2>

<button >
<b style="color:forestgreen;font-size:20px;">
    @Html.ActionLink("TẠO LẬP HỒ SƠ", "Create")
</b>
</button>
<hr />
<table  class="table table-striped table-bordered">
    <tr style="background-color:midnightblue;color:white">
        <th>
            @Html.DisplayNameFor(model => model.id_hoso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cmnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dantoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nghenghiep)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.cannang)
        </th>
  
        <th>
            @Html.DisplayNameFor(model => model.chieucao)
        </th>
     
        <th style="width:150px;">Chức năng</th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_hoso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cmnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dantoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nghenghiep)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.cannang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chieucao)
        </td>

        <td>
            <button style="width:150px;color:goldenrod"> @Html.ActionLink("XEM THÔNG TIN", "Details", new { id = item.id_hoso }) </button> <br />
            <button style="width:150px;color:darkblue"> @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = item.id_hoso })</button>  <br />
            <button style="width:150px;color:red"> @Html.ActionLink("LOẠI BỎ", "Delete", new { id = item.id_hoso })</button>
        </td>
    </tr>
}

</table>
