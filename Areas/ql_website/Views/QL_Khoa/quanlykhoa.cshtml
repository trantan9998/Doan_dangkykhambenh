@model IEnumerable<doan_qldkonline.Models.khoa>

@{
    ViewBag.Title = "quanlykhoa";
    Layout = "~/Areas/ql_website/Views/Shared/Layout_admin01.cshtml";
}

<h3 style="background-color:chocolate;color:white;">Quản lý KHOA \</h3><hr />
<button style="background-color:forestgreen;border:dotted;">
    <p style="color:white;font-size:20px;width:160px;height:20px;">
        @Html.ActionLink("TẠO MỚI", "Create")
    </p>
</button>
<table class="table table-striped table-bordered">
    <tr style="background-color:darkorange">
        <th style="width:100px;">
            @Html.DisplayNameFor(model => model.id_khoa)
        </th>
        <th style="width:700px;">
            @Html.DisplayNameFor(model => model.Ten_khoa)
        </th>
        <th>CHỨC NĂNG</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_khoa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten_khoa)
        </td>
        <td style="width:100px;">
            <span style="border:groove;background-color:darkgoldenrod;color:aliceblue;width:100px;text-align:center">@Html.ActionLink("XEM CHI TIẾT", "Details", new { id = item.id_khoa })</span> <br />
            <span style="border:groove;background-color:lightslategray;color:aliceblue;width:100px;text-align:center"> @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = item.id_khoa })</span> <br />
            <span style="border:groove;background-color:darkred;color:aliceblue;width:100px;text-align:center">@Html.ActionLink("XÓA BỎ", "Delete", new { id = item.id_khoa })</span>
        </td>
    </tr>
    }

</table>
