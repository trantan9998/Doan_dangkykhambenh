@model IEnumerable<doan_qldkonline.Models.bacsi>

@{
    ViewBag.Title = "quanlybacsi";
    Layout = "~/Areas/ql_website/Views/Shared/Layout_admin01.cshtml";
}

<h3 style="background-color:forestgreen;border-radius:10px;color:white;">QUẢN LÝ BÁC SĨ \</h3>
<button style="background-color:forestgreen;border:dotted;float:right ">
    <p style="color:white;font-size:20px;width:160px;height:20px;">
        @Html.ActionLink("TẠO HỒ SƠ", "Create")
    </p>
</button>
<br />
<hr />
<table class="table table-striped table-bordered">
    <tr style="background-color:lightblue">
        <th>
           MÃ BÁC SĨ
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hovaten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hinhanh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngaylamviec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bophan)
        </th>
        @*<th>
                KHOA
            </th>*@
        <th style="width:150px;">CHỨC NĂNG</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_bacsi)

        </td>

        <td>
            @Html.DisplayFor(modelItem => item.hovaten)
        </td>
        <td>
            <img src="@Url.Content(item.hinhanh)" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngaylamviec)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bophan)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.id_khoa)

        </td>*@
        <td>
            <button style="width:150px;color:goldenrod"> @Html.ActionLink("XEM THÔNG TIN", "Details", new { id = item.id_bacsi }) </button> <br />
            <button style="width:150px;color:darkblue"> @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = item.id_bacsi })</button>  <br />
            <button style="width:150px;color:red"> @Html.ActionLink("LOẠI BỎ", "Delete", new { id = item.id_bacsi })</button>
            <button style="width:150px;color:forestgreen"> @Html.ActionLink("CẤP TÀI KHOẢN", "themtaikhoan", new { id_bacsi = item.id_bacsi })</button>
        </td>
    </tr>
    }

</table>
