@model doan_qldkonline.Models.LOGIN

@{
    ViewBag.Title = "themtaikhoan";
    Layout = "~/Areas/ql_website/Views/Shared/Layout_admin01.cshtml";
}

<div class="row">
    <div class="col-lg-11">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            <div class="col-lg-6" style="margin-left:250px;">
                <div class="card" style="background:#e9e9e9;width:700px;height:400px;border:dotted;border-radius:10px;">
                    <div class="card-header">
                        <h3 style="color:forestgreen">TÀI KHOẢN BÁC SĨ</h3>
                    </div>
                    <hr />
                    <div class="card-body card-block">
                        <div class="form-group">
                            <label>MÃ BÁC SĨ </label>
                            @Html.EditorFor(model => model.id_bacsi, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.id_bacsi, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group ">
                            <label>TÊN ĐĂNG NHẬP</label>
                            @Html.EditorFor(model => model.name_user, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name_user, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>MẬT KHẨU</label>
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>

                        <button style="float:right;" type="submit" class="btn btn-primary">CẤP TÀI KHOẢN</button>
                    </div>
                </div>
            </div>

        }
    </div>

</div>
<div>
    <p style="background-color:brown; color:aliceblue;width:100px;">
        ⬅@Html.ActionLink("QUAY LẠI", "quanlybacsi")
    </p>
</div>
