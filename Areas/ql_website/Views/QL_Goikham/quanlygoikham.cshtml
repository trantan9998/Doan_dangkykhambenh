@model IEnumerable<doan_qldkonline.Models.goi_kham_suc_khoe>

@{
    ViewBag.Title = "quanlygoikham";
    Layout = "~/Areas/ql_website/Views/Shared/Layout_admin01.cshtml";
}

<h3 style="background-color:forestgreen;color:white;">Gói khám sức khỏe \</h3>
<hr />
<button style="background-color:forestgreen;border:dotted;float:right">
    <p style="color:white;font-size:20px;width:200px;height:20px;">
        @Html.ActionLink("KHỞI TẠO GÓI KHÁM", "Create")
    </p>
</button>
<br />
    <table class="table table-striped table-bordered">
        <tr style="background-color:forestgreen;color:white; ">
            <th style="width:8px;">
                @Html.DisplayNameFor(model => model.id_goikham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ten_goikham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gia)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.soluong)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.hinhanh)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.id_goikham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ten_goikham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td>
                    <img src="@Url.Content(item.hinhanh)" width="100" height="100" />
                </td>
                <td style="width:100px;">
                    <span style="border:groove;background-color:darkgoldenrod;color:aliceblue;width:100px;text-align:center">@Html.ActionLink("XEM CHI TIẾT", "Details", new { id = item.id_goikham })</span> <br />
                    <span style="border:groove;background-color:lightslategray;color:aliceblue;width:100px;text-align:center"> @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = item.id_goikham })</span> <br />
                    <span style="border:groove;background-color:darkred;color:aliceblue;width:100px;text-align:center">@Html.ActionLink("XÓA BỎ", "Delete", new { id = item.id_goikham })</span>
                </td>
            </tr>
        }

    </table>
