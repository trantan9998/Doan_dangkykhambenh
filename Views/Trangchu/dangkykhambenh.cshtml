@model doan_qldkonline.Models.dangkykhambenh

@{
    ViewBag.Title = "ĐĂNG KÝ KHÁM BỆNH";
    Layout = "~/Views/layout/layout_trangchu.cshtml";
    //var bacsi = Session["id_bacsi"] as doan_qldkonline.Models.bacsi;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ĐĂNG KÝ KHÁM BỆNH</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- MATERIAL DESIGN ICONIC FONT -->
    <!-- STYLE CSS -->
</head>
<body>
    <section class="section">
        <!--Section heading-->
        <h2 class="section-heading h1 pt-4">ĐĂNG KÝ KHÁM BỆNH</h2>
        <!--Section description-->
        <p class="section-description">
            Vui lòng điền đầy đủ thông tin vào form (bắt buộc (*))
        </p>
        <hr />
        <div class="row">


            <!--Grid column-->
            <div class="col-md-6 col-xl-12">

                <span style="color:forestgreen"> @ViewBag.message</span>
                <span style="color:red"> @ViewBag.message2</span>
                @using (Html.BeginForm("dangkykhambenh", "Trangchu", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <form style="font-display:swap;">
                        <!--Grid row-->
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!--Grid column-->
                            <div class="col-md-12">
                                <div class="md-form">
                                    <label for="name" class="">Họ Và Tên *</label>
                                    @Html.EditorFor(model => model.hovaten, new { htmlAttributes = new { @class = "form-control" } })
                                    @*<input name="hotens" type="text" class="form-control" />*@
                                    @Html.ValidationMessageFor(model => model.hovaten, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label for="email" class="">Số Điện Thoại *</label>
                                    @*<input name="sodienthoais" type="text" class="form-control"/>*@
                                    @Html.EditorFor(model => model.sodienthoai, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sodienthoai, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="md-form">
                                    <label for="subject" class="">Địa chỉ *</label>
                                    @*<input name="diachis" type="text" class="form-control" />*@
                                    @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label for="name" class="">Năm sinh: *</label>
                                    @*<input name="emails" type="email" class="form-control" />*@
                                    @Html.EditorFor(model => model.namsinh, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.namsinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label for="email" class="">Giới tính *</label>
                                    @*<input name="matkhaus" type="password" class="form-control" />*@
                                    @*@Html.DropDownListFor(model => model.gioitinh,new SelectList(Enum.GetValues(typeof(Gender))),"Select Gender")*@
                                    @*@Html.EditorFor(model => model.gioitinh, new { htmlAttributes = new { @class = "form-control" } })*@
                                    <select class="form-control" id="gioitinh" name="gioitinh">
                                        <option>NAM</option>
                                        <option>NỮ</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.gioitinh, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="md-form">
                                    <label for="email" class="">mô tả triệu chứng *</label>
                                    @*<input name="matkhaus" type="password" class="form-control" />*@
                                    @Html.EditorFor(model => model.motatrieuchung, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.motatrieuchung, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->

                            <div class="col-md-12">
                                <div class="md-form">
                                    <label for="message">Khác </label>
                                    @Html.EditorFor(model => model.khac, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.khac, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label for="name" class="">Ngày Khám *</label>
                                    @*<input name="ngaykhams" type="date" class="form-control">*@
                                    @Html.EditorFor(model => model.ngaykham, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ngaykham, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form">
                                    <label for="email" class="">Giờ khám *</label>
                                    @*<input name="giokhams" type="time" class="form-control">*@
                                    @Html.EditorFor(model => model.giokham, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.giokham, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <br />
                        </div>
                  
                        <hr />
                        <input type='submit' class='btn btn-finish btn-fill btn-success btn-wd ' name='finish' value='ĐĂNG KÝ KHÁM' style="margin-left:200px;" />

                        <!--Grid row-->
                    </form>

                    <br />
                }


            </div>

            <div class="col-md-4 col-xl-3">
                <ul class="contact-icons">
                    <li>
                        <img src="~/hinh_tintuc/dangky_flaticon.jpg" width="500">
                    </li>

                </ul>
            </div>
            <!--Grid column-->
        </div>
    </section>
</body>
</html>
